  "diagnostic-languageserver.formatFiletypes": { "sh": "shellcheck" },
  "coc.preferences.colorSupport": true,
  "tsserver.enableJavascript": true,
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "wxss.validate": false,
